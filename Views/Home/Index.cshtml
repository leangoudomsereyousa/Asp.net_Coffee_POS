
@{
    Layout = "_Layout";
    ViewData["Title"] = "Home";
}

<!-- HERO SECTION - Starbucks Style -->
<section class="relative bg-gray-50 dark:bg-gray-900 overflow-hidden">
    <div class="max-w-7xl mx-auto px-6 py-32 grid md:grid-cols-2 gap-12 items-center">
        <div class="space-y-6">
            <h1 class="text-5xl md:text-6xl font-extrabold text-gray-900 dark:text-white leading-tight">
                Freshly Roasted Coffee
                <span class="text-[#00704A] dark:text-[#A3D9A5]">Delivered Daily.</span>
            </h1>
            <p class="text-lg md:text-xl text-gray-600 dark:text-gray-300 max-w-lg">
                Experience premium, single-origin coffee beans sourced globally and roasted with perfection.
            </p>
            <div class="flex flex-wrap gap-4 mt-6">
                <a asp-controller="Shop" asp-action="Index"
                   class="px-8 py-3 bg-[#00704A] text-white font-semibold rounded-2xl shadow-md hover:bg-[#005733] hover:shadow-lg transition">
                    Shop Now
                </a>
                <a asp-controller="Home" asp-action="About"
                   class="px-8 py-3 border border-gray-300 dark:border-gray-600 rounded-2xl text-gray-900 dark:text-white hover:bg-gray-100 dark:hover:bg-gray-800 shadow-sm transition">
                    Learn More
                </a>
            </div>
        </div>
        <div class="relative">
            <img src="https://images.unsplash.com/photo-1509042239860-f550ce710b93"
                 class="rounded-3xl shadow-2xl object-cover w-full h-full" alt="Coffee Hero" />
            <div class="absolute -bottom-10 -right-10 w-40 h-40 bg-yellow-200 opacity-20 rounded-full animate-pulse"></div>
        </div>
    </div>
</section>

<!-- PROMOTION SLIDER - Full Centered -->
<section class="relative w-full overflow-hidden bg-white dark:bg-gray-900">
    <div class="relative w-full h-[500px] md:h-[650px]">

        <!-- Slides -->
        <div class="promo-track flex h-full">
            <!-- Slide 1 -->
