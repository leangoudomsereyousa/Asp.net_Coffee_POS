@{
    Layout = "_Layout";
    ViewData["Title"] = "Home";
}

<!-- HERO SECTION - Starbucks + Apple 100% Style -->
<section class="relative w-full h-screen overflow-hidden">
    <!-- Parallax background image -->
    <div class="absolute inset-0 transform-gpu will-change-transform" style="background-image: url('https://images.unsplash.com/photo-1509042239860-f550ce710b93?auto=format&fit=crop&w=1470&q=80'); background-size: cover; background-position: center;" id="hero-bg"></div>

    <!-- Dark overlay -->
    <div class="absolute inset-0 bg-black bg-opacity-30"></div>

    <!-- Content -->
    <div class="relative z-10 max-w-7xl mx-auto px-6 h-full flex flex-col justify-center items-center text-center md:text-left">
        <h1 class="text-5xl md:text-6xl font-extrabold text-white leading-tight max-w-3xl">
            Freshly Roasted Coffee
            <span class="text-[#00704A]">Delivered Daily.</span>
        </h1>
        <p class="mt-6 text-lg md:text-xl text-gray-200 max-w-2xl">
            Experience premium, single-origin coffee beans sourced globally and roasted to perfection.
        </p>
        <div class="mt-10 flex gap-4 flex-wrap justify-center md:justify-start">
            <a asp-controller="Shop" asp-action="Index"
               class="px-8 py-4 bg-[#00704A] text-white font-semibold rounded-2xl shadow-lg hover:bg-[#005733] transform hover:-translate-y-1 transition duration-300">
                Shop Now
            </a>
            <a asp-controller="Home" asp-action="About"
               class="px-8 py-4 border border-white text-white font-semibold rounded-2xl hover:bg-white hover:text-[#00704A] transform hover:-translate-y-1 transition duration-300">
                Learn More
            </a>
        </div>
    </div>

    <!-- Floating gradient shapes -->
    <div class="absolute -top-20 -left-10 w-40 h-40 bg-yellow-200 rounded-full opacity-20 animate-pulse"></div>
    <div class="absolute bottom-20 right-10 w-60 h-60 bg-green-300 rounded-full opacity-15 animate-pulse"></div>
</section>

<!-- PROMOTION SLIDER - Starbucks / Apple Minimal -->
<section class="relative w-full overflow-hidden bg-white dark:bg-gray-900">
    <div class="relative w-full h-[500px] md:h-[650px]">

        <!-- Slides -->
        <div class="promo-track flex h-full">
            <!-- Slide 1 -->
            <div class="promo-slide relative w-full flex-shrink-0 flex items-center justify-center h-full">
                <div class="absolute inset-0 flex items-center justify-center overflow-hidden">
                    <img src="~/image/promo/promo1.jpg"
                         alt="Holiday Dash Sweepstakes"
                         class="absolute inset-0 w-full h-full object-cover object-center" />
                </div>
                <div class="absolute inset-0 bg-black/30"></div>
                <div class="absolute inset-0 flex items-center justify-start px-6">
                    <div class="max-w-5xl text-white">
                        <h2 class="text-4xl md:text-5xl font-extrabold mb-4">
                            Holiday Dash Sweepstakes
                        </h2>
                        <p class="text-lg md:text-xl max-w-xl mb-6">
                            Enter for a chance to win free coffee for a year.
                        </p>
                        <a href="#"
                           class="inline-block px-8 py-3 bg-[#00704A] hover:bg-[#005733] rounded-full font-semibold transition">
                            Join Now
                        </a>
                    </div>
                </div>
            </div>

            <!-- Slide 2 -->
            <div class="promo-slide relative w-full flex-shrink-0 flex items-center justify-center h-full">
                <div class="absolute inset-0 flex items-center justify-center overflow-hidden">
                    <img src="~/image/promo/promo2.jpg"
                         alt="Seasonal Favorites"
                         class="absolute inset-0 w-full h-full object-cover object-center" />
                </div>
                <div class="absolute inset-0 bg-black/25"></div>
                <div class="absolute inset-0 flex items-center justify-start px-6">
                    <div class="max-w-5xl text-white">
                        <h2 class="text-4xl md:text-5xl font-extrabold mb-4">
                            Seasonal Favorites
                        </h2>
                        <p class="text-lg md:text-xl max-w-xl mb-6">
                            Discover limited-time blends inspired by winter flavors.
                        </p>
                        <a href="#shop"
                           class="inline-block px-8 py-3 bg-white text-gray-900 rounded-full font-semibold hover:bg-gray-100 transition">
                            Shop Collection
                        </a>
                    </div>
                </div>
            </div>

            <!-- Slide 3 -->
            <div class="promo-slide relative w-full flex-shrink-0 flex items-center justify-center h-full">
                <div class="absolute inset-0 flex items-center justify-center overflow-hidden">
                    <img src="~/image/promo/promo3.jpg"
                         alt="Brew at Home"
                         class="absolute inset-0 w-full h-full object-cover object-center" />
                </div>
                <div class="absolute inset-0 bg-black/25"></div>
                <div class="absolute inset-0 flex items-center justify-start px-6">
                    <div class="max-w-5xl text-white">
                        <h2 class="text-4xl md:text-5xl font-extrabold mb-4">
                            Brew Like a Barista
                        </h2>
                        <p class="text-lg md:text-xl max-w-xl mb-6">
                            Premium beans and tools for the perfect cup at home.
                        </p>
                        <a href="#"
                           class="inline-block px-8 py-3 bg-[#00704A] hover:bg-[#005733] rounded-full font-semibold transition">
                            Learn More
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Dots -->
        <div class="absolute bottom-6 left-1/2 -translate-x-1/2 flex gap-2">
            <button class="dot w-2.5 h-2.5 rounded-full bg-white/50"></button>
            <button class="dot w-2.5 h-2.5 rounded-full bg-white/30"></button>
            <button class="dot w-2.5 h-2.5 rounded-full bg-white/30"></button>
        </div>
    </div>

    <style>
        .promo-track {
            display: flex;
            width: 300%;
            animation: slidePromo 18s ease-in-out infinite;
        }

        @@keyframes slidePromo {
            0%, 33% {
                transform: translateX(0);
            }

            38%, 66% {
                transform: translateX(-100%);
            }

            71%, 100% {
                transform: translateX(-200%);
            }
        }
    </style>
</section>


<!-- Parallax Script -->
<script>
    // Simple parallax effect
    const bg = document.getElementById('hero-bg');
    window.addEventListener('scroll', () => {
        const scroll = window.scrollY;
        bg.style.transform = `translateY(${scroll * 0.3}px)`;
    });
</script>

