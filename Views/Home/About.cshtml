@{
    Layout = "_Layout";
    ViewData["Title"] = "About";
}

<!-- TOP SOCIAL MEDIA BAR -->
<div class="w-full bg-[#00704A]/90 backdrop-blur-md text-white py-2 transition-colors duration-300">
    <div class="max-w-7xl mx-auto px-6 flex justify-end gap-4 text-sm md:text-base">
        <a href="https://www.facebook.com" target="_blank" class="hover:text-gray-200 transition"><i class="fab fa-facebook-f"></i></a>
        <a href="https://www.instagram.com" target="_blank" class="hover:text-gray-200 transition"><i class="fab fa-instagram"></i></a>
        <a href="https://www.tiktok.com" target="_blank" class="hover:text-gray-200 transition"><i class="fab fa-tiktok"></i></a>
        <a href="https://telegram.org" target="_blank" class="hover:text-gray-200 transition"><i class="fab fa-telegram-plane"></i></a>
        <a href="https://www.youtube.com" target="_blank" class="hover:text-gray-200 transition"><i class="fab fa-youtube"></i></a>
        <a href="https://www.linkedin.com" target="_blank" class="hover:text-gray-200 transition"><i class="fab fa-linkedin-in"></i></a>
    </div>
</div>

<!-- ABOUT SECTION -->
<section id="about" class="bg-gray-50 dark:bg-gray-900 py-20 transition-colors duration-300">
    <div class="max-w-7xl mx-auto px-6 md:px-12 grid md:grid-cols-2 gap-16 items-center text-gray-900 dark:text-gray-200">

        <!-- Our Story -->
        <div class="space-y-6">
            <h2 class="text-4xl font-bold mb-4 text-gray-900 dark:text-white">Our Story</h2>
            <p class="text-gray-700 dark:text-gray-300 leading-relaxed text-lg">
                Welcome to <span class="font-semibold text-[#00704A]">Café MUY</span>! We started our journey in 2025 with the mission to provide the best coffee experience in town. Located in the heart of Phnom Penh, we offer a cozy atmosphere for coffee lovers to relax and enjoy their favorite beverages.
            </p>
            <div class="space-y-2 text-gray-700 dark:text-gray-300">
                <p><span class="font-semibold">Address:</span> 123 Coffee Street, Phnom Penh, Cambodia</p>
                <p><span class="font-semibold">Phone:</span> (+855) 123-456-789</p>
                <p><span class="font-semibold">Email:</span> Cafemuy@gmail.com</p>
            </div>
        </div>

        <!-- Map -->
        <div class="space-y-4">
            <h2 class="text-2xl font-semibold text-center mb-4 text-gray-900 dark:text-white">Our Location</h2>
            <div id="map" class="w-full h-96 rounded-3xl shadow-lg border border-gray-200 dark:border-gray-700 overflow-hidden"></div>
        </div>

    </div>
</section>

<!-- CONTACT FORM -->
<section class="min-h-screen flex items-center justify-center bg-gray-100 dark:bg-gray-900 py-16">
    <div class="container mx-auto px-4">
        <div class="max-w-lg mx-auto bg-white/70 dark:bg-gray-800/70 backdrop-blur-md rounded-3xl shadow-xl p-8 md:p-10 transition-transform hover:-translate-y-1 hover:shadow-2xl">

            <h1 class="text-center text-gray-900 dark:text-white text-3xl font-semibold mb-6">Contact Us</h1>

            <form asp-action="AddContact" asp-controller="Contact" method="post">
                @Html.AntiForgeryToken()

                <!-- Name -->
                <div class="mb-4">
                    <label class="block text-gray-800 dark:text-gray-200 font-medium mb-2">Name</label>
                    <input type="text" name="Name" placeholder="Enter your name" required
                           class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-green-700 focus:ring-2 focus:ring-[#00704A] focus:outline-none dark:bg-gray-900 dark:text-white text-gray-900" />
                </div>

                <!-- Phone -->
                <div class="mb-4">
                    <label class="block text-gray-800 dark:text-gray-200 font-medium mb-2">Phone</label>
                    <input type="tel" name="Phone" placeholder="Enter your phone number" required
                           class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-green-700 focus:ring-2 focus:ring-[#00704A] focus:outline-none dark:bg-gray-900 dark:text-white text-gray-900" />
                </div>

                <!-- Inquiry Type -->
                <div class="mb-4">
                    <label class="block text-gray-800 dark:text-gray-200 font-medium mb-2">Inquiry Type</label>
                    <div class="flex gap-4">
                        <label class="flex items-center gap-2 cursor-pointer">
                            <input type="radio" name="InquiryType" value="issue" required
                                   class="form-radio text-[#00704A] dark:text-green-400" />
                            <span class="text-gray-800 dark:text-gray-200">Issue</span>
                        </label>
                        <label class="flex items-center gap-2 cursor-pointer">
                            <input type="radio" name="InquiryType" value="feedback"
                                   class="form-radio text-[#00704A] dark:text-green-400" />
                            <span class="text-gray-800 dark:text-gray-200">Feedback</span>
                        </label>
                        <label class="flex items-center gap-2 cursor-pointer">
                            <input type="radio" name="InquiryType" value="other"
                                   class="form-radio text-[#00704A] dark:text-green-400" />
                            <span class="text-gray-800 dark:text-gray-200">Other</span>
                        </label>
                    </div>
                </div>

                <!-- Message -->
                <div class="mb-6">
                    <label class="block text-gray-800 dark:text-gray-200 font-medium mb-2">Message</label>
                    <textarea name="Message" rows="5" placeholder="Write your message here..." required
                              class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-green-700 focus:ring-2 focus:ring-[#00704A] focus:outline-none dark:bg-gray-900 dark:text-white text-gray-900"></textarea>
                </div>

                <!-- Buttons -->
                <div class="flex flex-col md:flex-row gap-4 justify-center">
                    <button type="submit" class="flex-1 bg-[#00704A] hover:bg-green-800 text-white font-medium py-3 rounded-xl transition-all shadow-md">
                        Send
                    </button>
                    <button type="reset" class="flex-1 bg-red-600 hover:bg-red-700 text-white font-medium py-3 rounded-xl transition-all shadow-md">
                        Reset
                    </button>
                </div>

            </form>
        </div>
    </div>
</section>

<!-- GOOGLE MAP SCRIPT -->
<script>
    function initMap() {
        var location = { lat: 11.562108, lng: 104.888535 }; // Phnom Penh
        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 14,
            center: location,
            disableDefaultUI: true,
            styles: [
                { elementType: 'geometry', stylers: [{ color: '#f5f5f5' }] },
                { elementType: 'labels.icon', stylers: [{ visibility: 'off' }] },
                { elementType: 'labels.text.fill', stylers: [{ color: '#616161' }] },
                { elementType: 'labels.text.stroke', stylers: [{ color: '#f5f5f5' }] },
                { featureType: 'road', elementType: 'geometry', stylers: [{ color: '#ffffff' }] },
                { featureType: 'water', elementType: 'geometry', stylers: [{ color: '#c9c9c9' }] }
            ]
        });

        var marker = new google.maps.Marker({
            position: location,
            map: map,
            title: "Café MUY - Phnom Penh"
        });
    }
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&callback=initMap" async defer></script>
