@model IEnumerable<Coffee_POS.Models.Order>
@{
    ViewBag.Title = "Today's Sales";
}

<h3 class="fw-bold mb-4">Today's Sales Report</h3>

<table class="table table-striped shadow-sm bg-white">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>User</th>
            <th>Product</th>
            <th>Qty</th>
            <th>Total ($)</th>
            <th>Pay</th>
            <th>Status</th>
            <th>Date</th>
        </tr>
    </thead>

    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="8" class="text-center text-muted">No sales today.</td>
            </tr>
        }
        else
        {
            foreach (var o in Model)
            {
                <tr>
                    <td>@o.Id</td>
                    <td>@o.User?.Name</td>
                    <td>@o.Product?.Name</td>
                    <td>@o.Quantity</td>
                    <td>$@o.TotalPrice</td>
                    <td>@o.PaymentMethod</td>
                    <td><span class="badge bg-success">@o.Status</span></td>
                    <td>@o.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                </tr>
            }
        }
    </tbody>
</table>
