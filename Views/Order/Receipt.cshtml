@model Coffee_POS.Models.Order

    newFunction();rd shadow-sm p-4 bg-white">

    function newFunction() {
        window.print();
    }

    <h3 class="fw-bold text-center mb-4">Coffee POS Receipt</h3>

    <p><strong>Order ID:</strong> @Model.Id</p>
    <p><strong>Date:</strong> @Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</p>
    <p><strong>Customer:</strong> @Model.User?.Name</p>

    <table class="table table-bordered mt-3">
        <thead class="table-dark">
            <tr>
                <th>Product</th>
                <th width="70">Qty</th>
                <th width="100">Price</th>
                <th width="100">Total</th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <td>@Model.Product?.Name</td>
                <td>@Model.Quantity</td>
                <td>$@(Model.TotalPrice / Model.Quantity)</td>
                <td>$@Model.TotalPrice</td>
            </tr>
        </tbody>
    </table>

    <h3 class="text-end fw-bold">Total: $@Model.TotalPrice</h3>

    <div class="text-center mt-4">
        <button class="btn btn-primary" onclick="window.print()">
            <i class="fa fa-print"></i> Print Receipt
        </button>
        <a href="/Order/Index" class="btn btn-secondary">Back to POS</a>
    </div>

</div>
